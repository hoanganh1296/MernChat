{
    "version": 2,
    "builds": [
      {
        "src": "./mern-chat-backend/server.js",  
        "use": "@vercel/node"
      },
      {
        "src": "./mern-chat-frontend/build",    
        "use": "@vercel/static"
      }
    ],

    "rewrites": [
      {
        "source": "/(.*)",
        "destination": "/mern-chat-backend/server.js"
      }
    ]
  }
